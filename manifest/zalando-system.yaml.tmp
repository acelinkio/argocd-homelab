---
kind: Namespace
apiVersion: v1
metadata:
  name: zalaando-system
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: zalaando-operator
  namespace: argocd
spec:
  destination:
    namespace: zalaando-system
    server: https://kubernetes.default.svc
  project: homelab
  source:
    chart: postgres-operator
    repoURL: https://opensource.zalando.com/postgres-operator/charts/postgres-operator
    targetRevision: 1.11.0
    helm:
      valuesObject:
        image:
          registry: ghcr.io
          repository: zalando/postgres-operator
  syncPolicy:
    automated:
      allowEmpty: true
      prune: true
      selfHeal: true
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: zalaando-operator-ui
  namespace: argocd
spec:
  destination:
    namespace: zalaando-system
    server: https://kubernetes.default.svc
  project: homelab
  source:
    chart: postgres-operator-ui
    repoURL: https://opensource.zalando.com/postgres-operator/charts/postgres-operator-ui
    targetRevision: 1.11.0
    helm:
      valuesObject:
        image:
          registry: ghcr.io
          repository: zalando/postgres-operator-ui
  syncPolicy:
    automated:
      allowEmpty: true
      prune: true
      selfHeal: true