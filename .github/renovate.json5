{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 3,
  "argocd": {
    "fileMatch": [
      "manifest/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "manifest/.+\\.yaml$",
      "bootstrap/.+\\.yaml$"
    ]
  }
}